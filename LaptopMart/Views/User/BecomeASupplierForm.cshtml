@model LaptopMart.ViewModels.BecomeASupplierViewModel
@{
    ViewBag.Title = "BecomeASupplierForm";
}

<h2>BecomeASupplierForm</h2>

@using (Html.BeginForm("BecomeASupplier", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        @Html.LabelFor(m => m.BrandName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.BrandName, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.BrandName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.Description)
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-danger" value="Save" />
        </div>
    </div>
}